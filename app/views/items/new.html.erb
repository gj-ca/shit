<h1>New Item</h1>

<%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :quantity%>
    <%= f.number_field :quantity %>
    <%= f.label :cost %>
    <%= f.number_field :cost, step: 0.1%>
    <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name") %>
    <%# collection_check_boxes(:item, :category_ids, @categories, :id, :name) %>
    <%= f.submit %>
<% end %>